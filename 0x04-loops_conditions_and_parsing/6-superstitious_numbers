#!/usr/bin/env bash

# Initialize counter
counter=1

# Define the while loop
while [ "$counter" -le 20 ]; do
    case $counter in
        4)
            echo -e "$counter\nand then bad luck from China"
            ;;
        9)
            echo -e "$counter\nand then bad luck from Japan"
            ;;
        17)
            echo -e "$counter\nand then bad luck from Italy"
            ;;
        *)
            echo "$counter"
            ;;
    esac

    # Increment counter
    ((counter++))
done
