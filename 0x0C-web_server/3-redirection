#!/usr/bin/env bash
# This script configures Nginx to redirect requests to /redirect_me with a 301 status code

# Install the Nginx web server package if it's not already installed
apt-get update
apt-get install -y nginx

one_line="index index.html;"
multiple_lines="index index.html;\n	location /redirect_me {\n		return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\\n	}"

sudo sed -i "s|${one_line}|${multiple_lines}|g" /etc/nginx/sites-enabled/default

# Create the index.html file with the content "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# restart the Nginx service to apply the new configuration
service nginx restart
